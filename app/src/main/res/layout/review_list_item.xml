<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/review_content"
        android:layout_marginBottom="@dimen/mid_margin"
        tools:text="Good action movie with a decent script for the genre. The photography is really good too but, in the end, it is quite repeating itself from beginning to end and the stormy OST is exhausting."
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        style="@style/customValuePaddingBottom" />
    <TextView
        android:id="@+id/review_author"
        tools:text="Andres Gomez"
        android:textStyle="bold|italic"
        android:layout_marginTop="@dimen/mid_margin"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        style="@style/customValuePaddingBottom" />
</LinearLayout>